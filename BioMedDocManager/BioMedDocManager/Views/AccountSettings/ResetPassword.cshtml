@model BioMedDocManager.Models.ChangePasswordModel
@{
    ViewData["Title"] = "帳號設定-密碼重設";
    Layout = "_NoNavLayout";
}

<div class="m-4">
    <h4 class="m-3 px-2"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h4>
    <form class="PasswordForm" asp-action="ResetPassword" method="post" target="_top">
        @Html.AntiForgeryToken()
        <div class="pop">
            <div class="row align-items-center my-3">

                <!-- 帳號(工號) -->
                <div class="row align-items-center my-3">
                    <div class="col-md-2 col-form-label text-md-end text-start">
                        <strong>@Html.LabelFor(m => m.UserName)：</strong>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="UserName" class="form-control" type="text" readonly="readonly" />
                    </div>
                </div>
                
                <!-- 姓名 -->
                <div class="row align-items-center my-3">
                    <div class="col-md-2 col-form-label text-md-end text-start">
                        <strong>@Html.LabelFor(m => m.FullName)：</strong>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="FullName" class="form-control" type="text" readonly="readonly" />
                    </div>
                </div>

                <!-- 快捷鍵 -->
                <div class="row align-items-center my-3">
                    <div class="col-md-2 col-form-label text-md-end text-start">
                        <strong>快捷鍵：</strong>
                    </div>
                    <div class="col-md-10">
                        <span>快速重設密碼為「Abcd + @Html.DisplayNameFor(m => m.UserName)」</span>
                        <button class="btn btn-outline-secondary copyUserNameButton" type="button">快速設定</button>
                    </div>
                </div>

                <!-- 新密碼 -->
                <div class="row align-items-center my-3">
                    <div class="col-md-2 col-form-label text-md-end text-start">
                        <span class="text-danger fw-bold">*</span><strong>@Html.LabelFor(m => m.NewPassword)：</strong>
                    </div>
                    <div class="col-md-10">
                        <span class="text-12 fw-bold">*密碼長度至少需8個字元</span>
                        <div class="input-group">
                            <input asp-for="NewPassword" class="form-control" type="password" required="required" />
                            <button class="btn btn-sm btn-outline-secondary togglePasswordButton" data-id="NewPassword" type="button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- 確認新密碼 -->
                <div class="row align-items-center my-3">
                    <div class="col-md-2 col-form-label text-md-end text-start">
                        <span class="text-danger fw-bold">*</span><strong>@Html.LabelFor(m => m.ConfirmPassword)：</strong>
                    </div>
                    <div class="col-md-10">
                        <span class="text-12 fw-bold">*密碼長度至少需8個字元</span>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" required="required" />
                            <button class="btn btn-sm btn-outline-secondary togglePasswordButton" data-id="ConfirmPassword" type="button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span id="ConfirmPasswordValidation" asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row align-items-center my-3">
                <div class="col-md-12 d-flex justify-content-center">
                    <button type="submit" class="btn2 btn-success mt-2 col-6 col-md-3 mx-1">
                        <i class="fas fa-check-circle"></i>&ensp;儲存
                    </button>
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="row align-items-center my-3">
                    <div class="col-md-12 d-flex justify-content-center">
                        <div class="alert alert-success">訊息：@ViewBag.Message</div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

@section PageScripts {
    <script nonce="@ViewBag.CspNonce">
        $(function () {
            CheckConfirmPassword('New');// New表示欄位名稱是新密碼
            copyUserNameButtonListener();// 密碼重設頁-快捷鍵事件監聽
            passwordVisibilityListener();// 密碼重設頁-密碼顯示按鈕事件監聽
        });
    </script>
}