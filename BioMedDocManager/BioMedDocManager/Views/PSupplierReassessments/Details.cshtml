@model BioMedDocManager.Models.SupplierReassessment
@{
    ViewData["Title"] = "再評估-檢視";
    Layout = "_NoNavLayout";
}

<div class="m-4">
    <h4 class="m-3 px-2"><i class="bi bi-search me-2"></i>@ViewData["Title"]</h4>
    <div class="pop">
        <!-- 品項編號 & 供應商名稱 -->
        <div class="row align-items-center my-3">
            <div class="col-md-2 col-form-label text-md-end text-start">
                <strong>@Html.DisplayNameFor(m => m.ProductClass)：</strong>
            </div>
            <div class="col-md-4">
                <div class="form-control-plaintext">@Model.ProductClass</div>
            </div>

            <div class="col-md-2 col-form-label text-md-end text-start">
                <strong>@Html.DisplayNameFor(m => m.SupplierName)：</strong>
            </div>
            <div class="col-md-4">
                <div class="form-control-plaintext">@Model.SupplierName</div>
            </div>
        </div>

        <!-- 評估日期 & 評核分數 -->
        <div class="row align-items-center my-3">
            <div class="col-md-2 col-form-label text-md-end text-start">
                <strong>@Html.DisplayNameFor(m => m.AssessDate)：</strong>
            </div>
            <div class="col-md-4">
                <div class="form-control-plaintext">@Model.AssessDate?.ToString("yyyy-MM-dd")</div>
            </div>

            <div class="col-md-2 col-form-label text-md-end text-start">
                <strong>@Html.DisplayNameFor(m => m.Grade)：</strong>
            </div>
            <div class="col-md-4">
                <div class="form-control-plaintext">@(Model.Grade?.ToString() ?? "無")</div>
            </div>
        </div>

        <!-- 評核結果 -->
        <div class="row align-items-center my-3">
            <div class="col-md-2 col-form-label text-md-end text-start">
                <strong>@Html.DisplayNameFor(m => m.AssessResult)：</strong>
            </div>
            <div class="col-md-4">
                <div class="form-control-plaintext">@Model.AssessResult</div>
            </div>
        </div>
    </div>
</div>