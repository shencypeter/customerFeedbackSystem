@using System.Web
@model BioMedDocManager.Models.PurchaseRecord
@{
    Layout = "_NoNavLayout";

    var supplierInfo = ViewData["SupplierInfo"] as QualifiedSupplier ?? new QualifiedSupplier();
}

<div class="m-4">

    <h4 class="m-3 px-2"><i class="bi bi-search me-2"></i>請購紀錄</h4>
    <div class="pop">
        @* 請購詳細資料 *@
        @await Html.PartialAsync("_PurchaseDetail", Model)
    </div>

    <hr class="my-4" />

    <h4 class="m-3 px-2"><i class="bi bi-search me-2"></i>驗收紀錄</h4>
    <div class="pop">
        @* 請購詳細資料 *@
        @await Html.PartialAsync("_PurchaseAssessmentDetail", Model)
    </div>

    <hr class="my-4" />

    <h4 class="m-3 px-2"><i class="bi bi-search me-2"></i>供應商評核紀錄</h4>

    <div class="pop">
        @* 供應商評核紀錄詳細資料 *@
        @await Html.PartialAsync("_PurchaseSupplierAssessDetail", Model)
    </div>
</div>