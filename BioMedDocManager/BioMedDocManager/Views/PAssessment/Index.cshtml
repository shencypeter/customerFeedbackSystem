@using System.Net
@using System.Text.Json
@model IEnumerable<Dictionary<string,object>>

@{
    ViewData["Title"] = "電子採購";
    Layout = "_AssetLayout";
    var queryModel = QueryableExtensions.GetSessionQueryModel<AssessmentsQueryModel>(Context);

    //assign default if null
    queryModel.OrderBy = queryModel.OrderBy ?? "request_date";

    var headers = ViewData["tableHeaders"] as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<form method="post" id="myForm">
    @Html.AntiForgeryToken()
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    <i class="fa fa-search"></i>&ensp;關鍵字搜尋
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse show" aria-labelledby="flush-headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body mx-3">


                    <!-- Row 1：請購日期 / 請購人 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：請購日期 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="@nameof(queryModel.VerifyDateStart)" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    驗收日期：
                                </label>

                                <div class="col-12 col-sm-8">
                                    <div class="row g-2 align-items-center">
                                        <!-- 起 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.VerifyDateStart)"
                                                       name="@nameof(queryModel.VerifyDateStart)"
                                                       value="@(queryModel.VerifyDateStart?.ToString("yyyy-MM-dd"))"
                                                       placeholder="起始日期"
                                                       max='@DateTime.Today.ToString("yyyy-MM-dd")' />
                                                <label class="input-group-text py-1" for="@nameof(queryModel.VerifyDateStart)">起</label>
                                            </div>
                                        </div>
                                        <!-- 止 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.VerifyDateEnd)"
                                                       name="@nameof(queryModel.VerifyDateEnd)"
                                                       value="@(queryModel.VerifyDateEnd?.ToString("yyyy-MM-dd"))"
                                                       placeholder="結束日期"
                                                       max='@DateTime.Today.ToString("yyyy-MM-dd")' />
                                                <label class="input-group-text py-1" for="@nameof(queryModel.VerifyDateEnd)">止</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <!-- 組2：請購人 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="Requester" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    請購人：
                                </label>
                                <div class="col-12 col-sm-8">
                                    @await Html.PartialAsync("_PurchaseRequesterSelect", queryModel.Requester)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 2：採購人 / 請購編號 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：採購人 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="Purchaser" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    採購人：
                                </label>
                                <div class="col-12 col-sm-8">
                                    @await Html.PartialAsync("_PurchasePurchaserSelect", queryModel.Purchaser)
                                </div>
                            </div>
                        </div>

                        <!-- 組2：請購編號 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="RequestNo" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    請購編號：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <div class="input-group">
                                        <input type="text"
                                               class="form-control"
                                               id="RequestNo"
                                               name="@nameof(queryModel.RequestNo)"
                                               value="@queryModel.RequestNo" />
                                        <a href="@Url.Action("DocSearchAllModal", "PPurchaseTables")"
                                           target="_blank"
                                           class="docSearch btn btn-outline-secondary"
                                           aria-label="開啟請購編號查詢">
                                            <i class="fas fa-search"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 3：產品名稱 / 品項分類 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：產品名稱 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="ProductName" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    產品名稱：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           id="ProductName"
                                           name="@nameof(queryModel.ProductName)"
                                           value="@queryModel.ProductName"
                                           class="form-control" />
                                </div>
                            </div>
                        </div>

                        <!-- 組2：品項分類 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="ProductClass" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    品項分類：
                                </label>
                                <div class="col-12 col-sm-8">
                                    @await Html.PartialAsync("_PurchaseProductClassSelect", queryModel.ProductClass)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 4：供應商名稱 / 供應商統編 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：供應商名稱 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="supplierName" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    供應商名稱：
                                </label>
                                <div class="col-12 col-sm-8">
                                    @await Html.PartialAsync("_PurchaseSupplierNameDataListSelect", queryModel.SupplierName)
                                </div>
                            </div>
                        </div>

                        <!-- 組2：供應商統編 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="SupplierNo" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    供應商統編：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           id="SupplierNo"
                                           name="@nameof(queryModel.SupplierNo)"
                                           value="@queryModel.SupplierNo"
                                           class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 5：評核總分 / 評核結果 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：評核總分 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="@nameof(queryModel.GradeMin)" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    評核總分：
                                </label>

                                <div class="col-12 col-sm-8">
                                    <div class="row g-2 align-items-center">
                                        <!-- 下 -->
                                        <div class="col-12 col-lg-6">
                                            <input type="number"
                                                   class="form-control"
                                                   id="@nameof(queryModel.GradeMin)"
                                                   name="@nameof(queryModel.GradeMin)"
                                                   value="@queryModel.GradeMin"
                                                   min="0" max="100" step="1"
                                                   placeholder="下限" />
                                        </div>

                                        <!-- 上 -->
                                        <div class="col-12 col-lg-6">
                                            <input type="number"
                                                   class="form-control"
                                                   id="@nameof(queryModel.GradeMax)"
                                                   name="@nameof(queryModel.GradeMax)"
                                                   value="@queryModel.GradeMax"
                                                   min="0" max="100" step="1"
                                                   placeholder="上限" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- 組2：評核結果 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="AssessResult" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    評核結果：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <select class="form-select" id="AssessResult" name="@nameof(queryModel.AssessResult)">
                                        <option value="" selected="@(string.IsNullOrEmpty(queryModel.AssessResult) ? "selected" : null)">全部</option>
                                        @foreach (var item in new[] { "合格", "不合格" })
                                        {
                                            <option value="@item" selected="@(queryModel.AssessResult == item ? "selected" : null)">@item</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Buttons -->
                    <div class="row mb-3">
                        <div class="col-12 d-flex justify-content-center flex-wrap gap-2">

                            <button type="submit" formaction="@Url.Action("Index")"
                                    class="btn2 btn-primary search_btn">
                                <i class="fa fa-search"></i>&ensp;查詢
                            </button>

                            <button type="submit" formaction="@Url.Action("GetExcel")"
                                    formtarget="_blank"
                                    class="btn2 btn-success export_btn">
                                <i class="fa fa-file-export"></i>&ensp;匯出 Excel
                            </button>

                            <button type="button" class="btn2 btn-secondary clear_btn" data-form="myForm">
                                <i class="fa fa-eraser"></i>&ensp;清除
                            </button>

                        </div>
                    </div>


                    <input type="hidden" id="@(nameof(queryModel.OrderBy))" name="@(nameof(queryModel.OrderBy))" value="@queryModel.OrderBy" />
                    <input type="hidden" id="@(nameof(queryModel.SortDir))" name="@(nameof(queryModel.SortDir))" value="@queryModel.SortDir" />
                    <input type="hidden" id="@nameof(queryModel.PageSize)" name="@nameof(queryModel.PageSize)" value="@queryModel.PageSize" />
                    <input type="hidden" id="@nameof(queryModel.PageNumber)" name="@nameof(queryModel.PageNumber)" value="@queryModel.PageNumber" />

                </div>
            </div>
        </div>
    </div>
</form>

<div class="table">
    <table class="table table-striped table-hover table-bordered text-break" id="myTable">
        <thead>
            <tr>
                @foreach (var item in headers)
                {
                    <th data-id="@item.Key">
                        @if (item.Key != "RowNum")
                        {
                            <a href="#"
                               title="點選以 @(item.Key) 排序"> @item.Value </a>
                        }
                        else
                        {
                            @item.Value
                        }
                        <span class="order-index"> @(queryModel.OrderBy.EndsWith(item.Key) ? (queryModel.SortDir == "asc" ? "▲" : "▼") : "")</span>
                    </th>
                }
                <th class="col-actions">功能</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="@(headers.Count + 1)">查無資料</td>
                </tr>
            }

            @foreach (var row in Model)
            {
                var keys = row.Keys;
                <tr>
                    @foreach (var key in keys)
                    {
                        string value = TableHelper.FormatValue(row[key]);

                        var classes = new List<string>();
                        if (value == "(無)")
                        {
                            if (key == "verify_date")
                            {
                                classes.Add("text-danger"); // 只有驗證日期的 (無) 顯示紅色
                            }
                            else
                            {
                                classes.Add("none-data");   // 其他欄位的 (無) 顯示灰色
                            }
                        }

                        if (key == "RowNum")
                        {
                            classes.Add("text-nowrap");                        
                        }

                        <td class="@string.Join(" ", classes)">
                            @Html.Raw(value)
                        </td>
                    }
                    <td class="col-actions">
                        @if (string.IsNullOrEmpty(row["verify_date"]?.ToString()))
                        {
                            <a class="btn btn-sm btn-outline-secondary detail" href="@Url.Action("Details", "PAssessment", new { RequestNo = row["request_no"] })" target="_blank">檢視</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-primary detail" href="@Url.Action("Edit", "PAssessment", new { RequestNo = row["request_no"] })" target="_blank">編輯</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@await Html.PartialAsync("_PagerSection", queryModel)

@section PageScripts {
    <script nonce="@ViewBag.CspNonce">
        docSearchBtnListenerModal();// 請購編號查詢按鈕事件監聽
    </script>

}