@using System.Text.Json
@model List<Dictionary<string, object>>
@{
    ViewData["Title"] = "Index";

    Layout = "_AssetLayout";

    var queryModel = QueryableExtensions.GetSessionQueryModel<FormQueryModel>(Context);
    queryModel.OrderBy ??= "issue_datetime";
    queryModel.SortDir ??= "asc";

    var headers = ViewData["tableHeaders"] as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<form method="post" id="myForm">
    @Html.AntiForgeryToken()
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    <i class="fa fa-search"></i>&ensp;關鍵字搜尋
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse show" aria-labelledby="flush-headingOne"
                 data-bs-parent="#accordionExample">
                <div class="accordion-body mx-3">

                    <!-- Row 1：發行日期 / 表單編號 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：發行日期 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="endDate" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    發行日期：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <input type="date"
                                           class="form-control form-control-narrow"
                                           id="endDate"
                                           name="@nameof(queryModel.IssueDate)"
                                           value="@(queryModel.IssueDate.HasValue? queryModel.IssueDate.Value.ToString("yyyy-MM-dd") : "")"
                                           max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>

                        <!-- 組2：表單編號 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="txt_form_no" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    表單編號：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <div class="input-group form-control-narrow">
                                        <input type="text"
                                               class="form-control"
                                               id="txt_form_no"
                                               name="@nameof(queryModel.DocNo)"
                                               value="@queryModel.DocNo" />
                                        <a class="btn btn-sm btn-secondary doc_tree_search_btn"
                                           target="_blank"
                                           href='@Url.Action("SearchAll", "Tree")'>
                                            <i class="fas fa-project-diagram"></i>&ensp;查詢
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 2：表單版次 / 表單名稱 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 組1：表單版次 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="txt_form_version" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    表單版次：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control form-control-narrow"
                                           id="txt_form_version"
                                           name="@nameof(queryModel.DocVer)"
                                           value="@queryModel.DocVer" />
                                </div>
                            </div>
                        </div>

                        <!-- 組2：表單名稱 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label for="txt_form_name" class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    表單名稱：
                                </label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control form-control-narrow"
                                           id="txt_form_name"
                                           name="@nameof(queryModel.DocName)"
                                           value="@queryModel.DocName" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons row -->
                    <div class="col-md-12 d-flex flex-wrap justify-content-center gap-2">
                        <button type="submit" formaction="@Url.Action("Index")"
                                class="btn2 btn-primary mt-2 search_btn">
                            <i class="fa fa-search"></i>&ensp;查詢
                        </button>

                        <button type="submit" formaction="@Url.Action("GetExcel")"
                                formtarget="_blank"
                                class="btn2 btn-success mt-2 export_btn">
                            <i class="fa fa-file-export"></i>&ensp;匯出 Excel
                        </button>

                        <button type="button" class="btn2 btn-secondary mt-2 clear_btn" data-form="myForm">
                            <i class="fas fa-eraser"></i>&ensp;清除
                        </button>
                    </div>

                    <!-- Hidden fields -->
                    <input type="hidden" id="@(nameof(queryModel.OrderBy))" name="@(nameof(queryModel.OrderBy))" value="@queryModel.OrderBy" />
                    <input type="hidden" id="@(nameof(queryModel.SortDir))" name="@(nameof(queryModel.SortDir))" value="@queryModel.SortDir" />
                    <input type="hidden" id="@nameof(queryModel.PageSize)" name="@nameof(queryModel.PageSize)" value="@queryModel.PageSize" />
                    <input type="hidden" id="@nameof(queryModel.PageNumber)" name="@nameof(queryModel.PageNumber)" value="@queryModel.PageNumber" />

                </div>
            </div>
        </div>
    </div>
</form>

<div class="table">
    <table class="table table-striped table-hover table-bordered text-break" id="myTable">
        <thead>
            <tr>
                @foreach (var item in headers)
                {
                    <th data-id="@item.Key">
                        @if (item.Key != "RowNum")
                        {
                            <a href="#" title="點選「@(item.Value)」欄位進行排序"> @item.Value </a>
                        }
                        else
                        {
                            @item.Value
                        }
                        <span class="order-index"> @(queryModel.OrderBy.EndsWith(item.Key) ? (queryModel.SortDir == "asc" ? "▲" : "▼") : "")</span>
                    </th>
                }
                <th class="col-actions">功能</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="@(headers.Count + 1)">查無資料</td>
                </tr>
            }

            @foreach (var row in Model)
            {
                var keys = row.Keys;
                <tr>
                    @foreach (var key in keys)
                    {
                        if (!headers.ContainsKey(key))
                        {
                            continue;
                        }

                        string value = TableHelper.FormatValue(row[key]);

                        <td class="@(value == "(無)" ? "none-data" : "") @((key == "RowNum") ? "text-nowrap" : "")">
                            @Html.Raw(value)
                        </td>
                    }
                    <td class="col-actions">
                        @{
                            var txt_form_no = row["original_doc_no"];
                            var txt_form_version = row["doc_ver"];
                            var issueDate = ((DateTime)row["issue_datetime"]).ToString("yyyy-MM-dd");
                        }
                        <a class="btn btn-sm btn-outline-secondary detail" href="@Url.Action("Details", "CFormQuery", new { docNo = txt_form_no, docVer = txt_form_version })">檢視</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PagerSection", queryModel)

@section PageScripts {
    <script nonce="@ViewBag.CspNonce">

    </script>
}