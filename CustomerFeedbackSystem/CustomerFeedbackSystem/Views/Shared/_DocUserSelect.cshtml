@model string // 傳入目前選擇的 Id
@{
    var DocUser = ViewData["DocUser"] as SelectOption?[] ?? new SelectOption[] { };
    var isRequired = ViewData["DocUserIsRequired"] as bool? ?? false;// 欄位是否必填
}

<select id="Id"  name="Id" class="form-select" @(isRequired ? "required" : "")>
    <option value="">請選擇</option>
    @foreach (var user in DocUser)
    {
        <option value="@user.OptionValue"
                selected="@(user.OptionValue == Model?.Trim() ? "selected" : null)">
            @user.OptionText
        </option>
    }
</select>