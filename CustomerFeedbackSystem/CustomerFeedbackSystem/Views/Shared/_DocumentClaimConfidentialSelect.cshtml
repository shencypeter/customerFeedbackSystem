@model bool? // 傳入目前選擇的類型
@{
    var isRequired = ViewData["DocumentClaimConfidentialSelectIsRequired"] as bool? ?? false;
}

<select id="IsConfidential" name="IsConfidential" class="form-select" @(isRequired ? "required" : "")>
    <option value="">請選擇</option>
    <option value="false" selected="@(false == Model ? "selected" : null)">否</option>
    <option value="true" selected="@(true == Model ? "selected" : null)">是</option>
</select>