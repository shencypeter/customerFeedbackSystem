@model IEnumerable<Dictionary<string,object>>
@{
    ViewData["Title"] = "電子採購";
    Layout = "_AssetLayout";

    var queryModel = QueryableExtensions.GetSessionQueryModel<FeedbackQueryModel>(Context);

    //assign default if null
    queryModel.OrderBy = queryModel.OrderBy ?? "request_date";

    var headers = ViewData["tableHeaders"] as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<form method="post" asp-action="Index" id="myForm">
    @Html.AntiForgeryToken()

    <div class="accordion" id="accordionExample">
        <div class="accordion-item border border-secondary-subtle bg-light">
            <h2 class="accordion-header" id="flush-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    <i class="fa fa-filter"></i>&ensp;供應商篩選
                </button>
            </h2>
            <div id="flush-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="flush-headingTwo"
                 data-bs-parent="#accordionExample">
                <div class="accordion-body mx-3">

                    <!-- ===================== 查詢條件 ===================== -->
                    <!-- Row 1：項次 / 提單編號 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">項次：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="number"
                                           class="form-control"
                                           name="@nameof(queryModel.ItemNo)"
                                           value="@queryModel.ItemNo" />
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">提單編號：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.FeedbackNo)"
                                           value="@queryModel.FeedbackNo" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 2：公司別 / 提單單位 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">公司別：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.Company)"
                                           value="@queryModel.Company"
                                           placeholder="三趨 / 甲方" />
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">提單單位：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.OrgName)"
                                           value="@queryModel.OrgName" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 3：提單人角色 / 提單人姓名 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">提單人角色：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.SubmittedByRole)"
                                           value="@queryModel.SubmittedByRole" />
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">提單人姓名：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.SubmittedByName)"
                                           value="@queryModel.SubmittedByName" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 4：提單日期 / 結案日期 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">

                        <!-- 提單日期 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    提單日期：
                                </label>

                                <div class="col-12 col-sm-8">
                                    <div class="row g-2 align-items-center">

                                        <!-- 起 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.SubmittedDateStart)"
                                                       name="@nameof(queryModel.SubmittedDateStart)"
                                                       value="@(queryModel.SubmittedDateStart?.ToString("yyyy-MM-dd"))"
                                                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                <label class="input-group-text py-1"
                                                       for="@nameof(queryModel.SubmittedDateStart)">起</label>
                                            </div>
                                        </div>

                                        <!-- 止 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.SubmittedDateEnd)"
                                                       name="@nameof(queryModel.SubmittedDateEnd)"
                                                       value="@(queryModel.SubmittedDateEnd?.ToString("yyyy-MM-dd"))"
                                                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                <label class="input-group-text py-1"
                                                       for="@nameof(queryModel.SubmittedDateEnd)">止</label>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 結案日期 -->
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">
                                    結案日期：
                                </label>

                                <div class="col-12 col-sm-8">
                                    <div class="row g-2 align-items-center">

                                        <!-- 起 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.ClosedDateStart)"
                                                       name="@nameof(queryModel.ClosedDateStart)"
                                                       value="@(queryModel.ClosedDateStart?.ToString("yyyy-MM-dd"))"
                                                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                <label class="input-group-text py-1"
                                                       for="@nameof(queryModel.ClosedDateStart)">起</label>
                                            </div>
                                        </div>

                                        <!-- 止 -->
                                        <div class="col-12 col-lg-6">
                                            <div class="input-group">
                                                <input type="date"
                                                       class="form-control"
                                                       id="@nameof(queryModel.ClosedDateEnd)"
                                                       name="@nameof(queryModel.ClosedDateEnd)"
                                                       value="@(queryModel.ClosedDateEnd?.ToString("yyyy-MM-dd"))"
                                                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                <label class="input-group-text py-1"
                                                       for="@nameof(queryModel.ClosedDateEnd)">止</label>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <!-- Row 5：急迫性 / 狀態 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">急迫性：</label>
                                <div class="col-12 col-sm-8">
                                    <select class="form-select" name="@nameof(queryModel.Urgency)">
                                        <option value="">全部</option>
                                        <option value="低" selected="@(queryModel.Urgency == "低")">低</option>
                                        <option value="中" selected="@(queryModel.Urgency == "中")">中</option>
                                        <option value="高" selected="@(queryModel.Urgency == "高")">高</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">狀態：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.Status)"
                                           value="@queryModel.Status" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Row 6：提問內容 / 回覆內容 -->
                    <div class="row mb-3 g-3 row-cols-1 row-cols-md-2 align-items-center">
                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">提問內容：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.QuestionContent)"
                                           value="@queryModel.QuestionContent" />
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="row g-2 align-items-center">
                                <label class="col-12 col-sm-4 col-form-label text-sm-end text-start">回覆內容：</label>
                                <div class="col-12 col-sm-8">
                                    <input type="text"
                                           class="form-control"
                                           name="@nameof(queryModel.ResponseContent)"
                                           value="@queryModel.ResponseContent" />
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Buttons -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-center flex-wrap gap-2">

                                <button type="submit"
                                        formaction="@Url.Action("Index")"
                                        class="btn2 btn-primary search_btn">
                                    <i class="fa fa-search"></i>&ensp;查詢
                                </button>

                                <button type="submit"
                                        formaction="@Url.Action("GetExcel")"
                                        formtarget="_blank"
                                        class="btn2 btn-success export_btn">
                                    <i class="fa-solid fa-file-excel"></i>&ensp;匯出 Excel
                                </button>

                                <button type="button"
                                        class="btn2 btn-secondary clear_btn"
                                        data-form="myForm">
                                    <i class="fa fa-eraser"></i>&ensp;清除
                                </button>
                                @*評核人才顯示新增供應商*@
                                @if (User.IsInRole(BaseController.FunctionRoleStrings.提問者) || User.IsInRole(BaseController.AdminRoleStrings.系統管理者))
                                {
                                    <a id="create_btn"
                                       asp-action="Create"
                                       target="_blank"
                                       class="btn2 btn-sm btn-info">
                                        <i class="fa fa-circle-question"></i>&ensp;我要提問
                                    </a>
                                }
                            </div>
                        </div>
                    </div>


                    <!-- Hidden Fields -->
                    <input type="hidden" id="@(nameof(queryModel.OrderBy))" name="@nameof(queryModel.OrderBy)" value="@queryModel.OrderBy" />
                    <input type="hidden" id="@(nameof(queryModel.SortDir))" name="@nameof(queryModel.SortDir)" value="@queryModel.SortDir" />
                    <input type="hidden" id="@nameof(queryModel.PageSize)" name="@nameof(queryModel.PageSize)" value="@queryModel.PageSize" />
                    <input type="hidden" id="@nameof(queryModel.PageNumber)" name="@nameof(queryModel.PageNumber)" value="@queryModel.PageNumber" />

                </div>
            </div>
        </div>
    </div>
</form>

<div class="table">
    <table class="table table-striped table-hover table-bordered text-break" id="myTable">
        <thead>
            <tr>
                @foreach (var item in headers)
                {
                    if (!headers.ContainsKey(item.Key))
                    {
                        continue;
                    }

                    <th data-id="@item.Key">
                        @if (item.Key != "RowNum")
                        {
                            <a href="#" title="點選「@(item.Value)」欄位進行排序"> @item.Value </a>
                        }
                        else
                        {
                            @item.Value
                        }
                        <span class="order-index"> @(queryModel.OrderBy.EndsWith(item.Key) ? (queryModel.SortDir == "asc" ? "▲" : "▼") : "")</span>
                    </th>
                }
                <th class="col-actions">功能</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="@(headers.Count + 1)">查無資料</td>
                </tr>
            }

            @{
                var groupedModel = Model
                .GroupBy(row => new
                {
                    SupplierName = row.ContainsKey("supplier_name") ? row["supplier_name"]?.ToString() : "",
                    SupplierNo = row.ContainsKey("supplier_no") ? row["supplier_no"]?.ToString() : ""
                });
                int pageRowNumber = 0;

                var firstRow = Model.FirstOrDefault();
                if (firstRow != null && firstRow.TryGetValue("RowNum", out var rowNumObj) && int.TryParse(rowNumObj?.ToString(), out int rowNum))
                {
                    pageRowNumber = rowNum - 1;
                }
            }

            @foreach (var group in groupedModel)
            {
                bool isSingle = group.Count() == 1;


                foreach (var row in group)
                {
                    var keys = row.Keys;
                    <tr>
                        @foreach (var key in keys)
                        {
                            if (!headers.ContainsKey(key))
                            {
                                continue;
                            }

                            string value = TableHelper.FormatValue(row[key]);
                            if (key == "RowNum")
                            {
                                value = (++pageRowNumber).ToString();
                            }

                            <td class="@(value == "(無)" ? "none-data" : "") @((key == "RowNum") ? "text-nowrap" : "")">
                                @Html.Raw(value)
                            </td>
                        }

                        <td class="col-actions">
                            @{
                                var supplierName = ""; //row["supplier_name"]?.ToString();
                                var productClass = "";// row["product_class"]?.ToString();
                            }

                            <!-- 評核人才可以編輯/刪除，其他人只能檢視 -->
                            @if (false && User.IsInRole(BaseController.PurchaseRoleStrings.評核人))
                                    {
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        功能
                                    </button>
                                    <ul class="dropdown-menu">

                                        <li>
                                            <a class="dropdown-item detail" href="@Url.Action("Details", "PQualifiedSuppliers", new { SupplierName = supplierName, ProductClass = productClass })">檢視</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item detail" href="@Url.Action("Edit", "PQualifiedSuppliers", new { SupplierName = supplierName, ProductClass = productClass })">編輯</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item detail" href="@Url.Action("Delete", "PQualifiedSuppliers", new { SupplierName = supplierName, ProductClass = productClass })">刪除</a>
                                        </li>

                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-secondary detail" href="@Url.Action("Details", "PQualifiedSuppliers", new { SupplierName = supplierName, ProductClass = productClass })">檢視</a>
                            }
                        </td>
                    </tr>
                }

                if (!isSingle)
                {
                    // Group Footer Divider Row
                    <tr class="table-divider">
                        <td colspan="@(headers.Count + 1)"></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PagerSection", queryModel)

@section PageScripts {
    <script nonce="@ViewBag.CspNonce">

    </script>
}